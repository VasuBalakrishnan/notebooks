   "source": [
    "def isOdd(num):\n",
    "    return num & 1\n",
    "\n",
    "def isEven(num):\n",
    "    return num & 1 == 0 # not isOdd\n",
    "\n",
    "def isOpposite(x, y):\n",
    "    return x ^ y < 0\n",
    "\n",
    "def checkExactlyOneBitSet(x, y):\n",
    "    return x & (x - 1) == 0"
   ]
